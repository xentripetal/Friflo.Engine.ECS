<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Class="Friflo.Editor.UI.ValidationError"
             xmlns:local="clr-namespace:Friflo.Editor.UI"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="30">

    <TextBlock DockPanel.Dock="Left" Foreground="Black"
               FontSize="14"
               Text="{Binding $parent[local:ValidationError].Error}" />
</UserControl>