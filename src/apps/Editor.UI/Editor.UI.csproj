            <SubType>Code</SubType>
        </Compile>
        <Compile Update="UI\Panels\TestPanel.axaml.cs">
            <DependentUpon>TestPanel.axaml</DependentUpon>
            <SubType>Code</SubType>
        </Compile>

        <!-- ========================= UI\Inspector               ========================= -->
        <Compile Update="UI\Inspector\GroupAdd.axaml.cs">
